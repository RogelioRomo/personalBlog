---
import TypedNotePost from "@components/notes/TypedNotePost.astro";
import { getCollection } from "astro:content";

const notesPosts = await getCollection("note");
const limitedNotePosts = notesPosts.slice(0, 1);
---

<section class="mt-10">
  <a class="font-bold text-xl text-customGreen" href="/notes/1"
    ><h2 class="mb-6">Notes</h2></a
  >
  {limitedNotePosts.map((note) => <TypedNotePost note={note} />)}
</section>
