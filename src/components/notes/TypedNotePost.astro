---
import type { CollectionEntry } from "astro:content";

interface Props {
  note: CollectionEntry<"note">;
}

const { note } = Astro.props;
const frontmatter = note.data;

const { Content } = await note.render();
---

<div
  class="bg-[#212326] dark:bg-gray-100 text-customGray dark:text-customBlack rounded-md p-4 mb-2 flex flex-col gap-4"
>
  <div>
    <p
      class="font-bold text-base underline decoration-2 hover:decoration-customPink"
    >
      {frontmatter.title}
    </p>
    <p>{frontmatter.date}</p>
  </div>
  <div class="flex flex-col gap-4">
    <Content />
  </div>
</div>
